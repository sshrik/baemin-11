extends ../Layout.pug
include ../components/StatusBar.pug
include ../components/SubHeader.pug
include ../components/LoginForm.pug
include ../components/TextButton.pug
include ../components/Input.pug
include ../components/SubButton.pug

include ../components/EnglishPad.pug
include ../components/NumberPad.pug

block styles
  link(rel="stylesheet", href="/css/global.css")
  link(rel="stylesheet", href="/css/screens/inputPhone.css")
  link(rel="stylesheet", href="/css/components/statusbar.css")
  link(rel="stylesheet", href="/css/components/subheader.css")
  link(rel="stylesheet", href="/css/components/textButton.css")
  link(rel="stylesheet", href="/css/components/checkInput.css")
  link(rel="stylesheet", href="/css/components/input.css")
  link(rel="stylesheet", href="/css/components/subButton.css")
  link(rel="stylesheet", href="/css/components/englishPad.css")
  link(rel="stylesheet", href="/css/components/numberPad.css")
block content
  div(class="container")
    +StatusBar()
    -
      const headerProps = {
        leftSrc: '/resource/arrow-back.svg',
        title: '회원가입',
        rightText: '다음'
      }
    -
    +SubHeader(headerProps)
    div(id="inputPhone__container")
      +Input({ name: 'phone', headerText: '휴대전화', placeholder: '휴대전화 번호를 입력해주세요' })
      div(id="inputPhone__buttonContainer")
        +SubButton({ classSelector: 'verify-btn', content: "인증번호 받기" })
  +EnglishPad()
  +NumberPad()

block scripts 
  script(src="/js/inputPhone.js") 
  script(src="/js/dial.js")